datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
}


model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  category    String
  type        String
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  userName  String
  rating    Int
  comment   String
  date      DateTime @default(now())
}

model Order {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  phone           String
  email           String
  address         String?
  city            String?
  county          String?
  deliveryMethod  String
  paymentMethod   String
  easyboxLocation String?
  total           Float
  items           String
  createdAt       DateTime @default(now())
}
